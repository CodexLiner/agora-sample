<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SampleViews" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize light theme colors here -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@android:color/white</item>  <!-- Text/icon color on primary color -->

        <!-- Button Style -->
        <item name="buttonStyle">@style/MyButtonStyle</item>
    </style>

    <style name="Theme.SampleViews" parent="Base.Theme.SampleViews" />

    <!-- Custom button style for MaterialButton -->
    <style name="MyButtonStyle">
        <item name="android:backgroundTint">@android:color/white</item>   <!-- Button background color -->
        <item name="android:textColor">@android:color/black</item>         <!-- Button text color -->
        <item name="android:iconTint">@android:color/black</item>         <!-- Button icon color -->
        <item name="android:strokeColor">@android:color/darker_gray</item> <!-- Button stroke color -->
    </style>
</resources>
